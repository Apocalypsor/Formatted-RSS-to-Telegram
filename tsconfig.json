{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./src",
        "paths": {
            "@services/*": ["./services/*"],
            "@utils/*": ["./utils/*"],
            "@config/*": ["./config/*"],
            "@consts/*": ["./consts/*"],
            "@database/*": ["./database/*"]
        },
        "allowJs": true,
        "resolveJsonModule": true
    },
    "ts-node": { "esm": true },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
